<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youli.oldageassess.activity.LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/bjt">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

    <TextView
        android:textSize="18sp"
        android:id="@+id/login_name1"
        android:paddingTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@null"
        android:layout_above="@id/rl_dl_tx"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="评估员A"/>

        <TextView
            android:textSize="18sp"
            android:id="@+id/login_name2"
            android:paddingTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@null"
            android:layout_above="@id/rl_dl_tx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="评估员B"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">



    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">


        <RelativeLayout
            android:id="@+id/rl_dl_tx"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:id="@+id/iv_dl_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tx"/>

            <EditText
                android:id="@+id/et_username"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:background="@null"
                android:layout_toRightOf="@id/iv_dl_tx"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>



        <View
            android:layout_below="@id/rl_dl_tx"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            />
    </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_dl_tx2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:id="@+id/iv_dl_tx2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tx"/>

                <EditText
                    android:id="@+id/et_username2"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:background="@null"
                    android:layout_toRightOf="@id/iv_dl_tx2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_below="@id/rl_dl_tx2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"
                />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/rl_dl_mm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:id="@+id/iv_dl_mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mm"/>

            <EditText
                android:id="@+id/et_pwd"
                android:inputType="textPassword"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:layout_alignTop="@id/iv_dl_mm"
                android:background="@null"
                android:layout_toRightOf="@id/iv_dl_mm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_below="@id/rl_dl_mm"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            />

    </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_dl_mm2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:id="@+id/iv_dl_mm2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mm"/>

                <EditText
                    android:id="@+id/et_pwd2"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:layout_alignTop="@id/iv_dl_mm2"
                    android:background="@null"
                    android:layout_toRightOf="@id/iv_dl_mm2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_below="@id/rl_dl_mm2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"
                />

        </RelativeLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="登   录"
            android:id="@+id/btn_dl"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dl_selector"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"></LinearLayout>

</LinearLayout>
