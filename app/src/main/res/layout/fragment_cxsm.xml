<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:paddingTop="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="诚 信 声 明"/>


    <TextView
        android:textSize="15sp"
        android:padding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="\t\t\t\t我（们）声明：以下调查中，我（们）所提供的材料均真实有效，表现和回答的关于被调查者的身体状况等，均为平常或近期的一贯情形，无任何虚假申报情况。如不真实，愿意放弃申报资格，并承担由此带来的相应后果。
\n\t\t\t\t协助调查人声明：我所提供的信息均为我平常所观察和了解的关于被调查者一贯的身体状况，无任何虚假申报的情况。"
        />

    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上 传 照 片"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <RelativeLayout
                android:id="@+id/rl_cxsm_photo_one"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/shape_cxsm"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:background="@drawable/tj2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/iv_cxsm_photo_one"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_cxsm_delete_one"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cha"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_cxsm_photo_two"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/shape_cxsm"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">
            <LinearLayout
                android:background="@drawable/tj2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/iv_cxsm_photo_two"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                  />

            </LinearLayout>

                <ImageView
                    android:id="@+id/iv_cxsm_delete_two"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cha"/>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <RelativeLayout
                android:id="@+id/rl_cxsm_photo_three"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/shape_cxsm"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:background="@drawable/tj2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/iv_cxsm_photo_three"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_cxsm_delete_three"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cha"/>

            </RelativeLayout>

            <RelativeLayout
                android:visibility="invisible"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/shape_cxsm"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:background="@drawable/tj2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cha"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:visibility="gone"
        android:layout_gravity="bottom|center"
        android:background="@drawable/btn_wenjuan_selector"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:id="@+id/btn_photo_fragment_cxsm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="上传图片"/>

    <Button
        android:layout_gravity="bottom|center"
        android:background="@drawable/btn_wenjuan_selector"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:id="@+id/btn_start_fragment_cxsm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="开始答题"/>
</LinearLayout>